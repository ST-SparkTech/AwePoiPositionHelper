<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ezartech.demo.ezarpoi" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ezar-poi</name>
    <description>
        Display points of interest positioned using gps or polar coordinates 
        overlaying a camera video preview.
    </description>
    <author email="info@ezartech.com" href="http://ezartech.com">
        Wayne Parrott
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
</widget>
